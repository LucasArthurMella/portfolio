  <div class="page-title">
    <h1>Edit Main Project</h1> 
    <hr>
  </div>

  <form action="/api/adm/main-project/<%=item.main_project._id%>?_method=PATCH" method="post" class="form-box main-form-box adm-form" >
    <div class="form-container">
      <div class="input-group">
        <div class="input-container">
          <label class="input-label" for="project">Select Project</label>
          <select class="input" name="project" autocomplete="off">
            <% for(let project of item.projects){ %>
            <option value="<%=project._id%>"
            <% if(project._id.toString() == item.main_project.project) { %>
                selected="selected"
              <% } %>
              ><%=project.name["en-US"]%>
              </option>
            <% } %>
          </select>
        </div> 
      </div>

    <div class="input-group">
      <button class="main-button ml-0">Edit</button>
    </div>

    </div>

  </form>      
